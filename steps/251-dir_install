#!/usr/bin/perl -w

foreach (i_isa_fetchall("dir_install"))
{
	while (my($dest, $src) = each(%$_))
	{
		next unless i_should($dest);
		$src = { -src => $src } if ref $src ne 'HASH';
		map { "-$_" unless /^-/ } keys %$src;
		dir_install(-src => $src->{-src}, -dest => $dest, -cmd => $src->{command}, $src);
	}
}

